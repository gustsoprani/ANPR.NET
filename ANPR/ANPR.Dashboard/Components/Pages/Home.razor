@page "/"
@using ANPR.Core.Services
@using ANPR.Shared.Models
@inject AnprProcessor Processor
@implements IDisposable

<PageTitle>Dashboard ANPR</PageTitle>

<div class="container-fluid p-4">
    <div class="row g-4">

        <div class="col-lg-8">
            <div class="card shadow h-100 border-0">
                <div class="card-header bg-dark text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">📹 Câmera Ao Vivo</h5>
                    <span class="badge bg-danger animate-pulse">● LIVE</span>
                </div>
                <div class="card-body bg-black p-0 d-flex align-items-center justify-content-center position-relative" style="min-height: 480px;">
                    @if (!string.IsNullOrEmpty(CurrentFrame))
                    {
                        <img src="data:image/jpeg;base64,@CurrentFrame" class="img-fluid w-100" style="object-fit: contain; max-height: 600px;" />

                        <div class="position-absolute bottom-0 start-0 w-100 p-3 bg-gradient-dark text-white d-flex justify-content-between align-items-end"
                             style="background: linear-gradient(to top, rgba(0,0,0,0.8), transparent);">
                            <div>
                                <small class="text-white-50">Última Atualização</small>
                                <div class="fw-bold">@LastUpdateTime</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-white-50">
                            <div class="spinner-border mb-3" role="status"></div>
                            <p>Aguardando sinal da câmera...</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-4">

            <div class="card shadow mb-4 border-0">
                <div class="card-header bg-white border-bottom">
                    <h5 class="mb-0">🔍 Resultado da Análise</h5>
                </div>
                <div class="card-body text-center">

                    <h6 class="text-muted text-uppercase mb-1">Placa Detectada</h6>
                    <div class="display-4 fw-black mb-3 @StatusColor" style="letter-spacing: 2px; font-family: monospace;">
                        @PlateText
                    </div>

                    <div class="alert @AlertClass d-flex align-items-center justify-content-center gap-2 py-3">
                        @if (IsAuthorized)
                        {
                            <i class="bi bi-check-circle-fill fs-4"></i>
                        }
                        else
                        {

                            <i class="bi bi-x-circle-fill fs-4"></i>
                        }
                        <span class="fw-bold fs-5">@AccessMessage</span>
                    </div>

                    <hr />

                    <div class="text-start">
                        <div class="mb-2">
                            <span class="text-muted small">Proprietário / Veículo</span>
                            <div class="fw-bold fs-5">@VehicleInfo</div>
                        </div>
                        <div>
                            <span class="text-muted small">Motivo</span>
                            <div>@ReasonText</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow border-0">
                <div class="card-header bg-light">
                    <h6 class="mb-0">⚙️ Visão do Computador (Debug)</h6>
                </div>
                <div class="card-body text-center bg-light p-3">
                    @if (!string.IsNullOrEmpty(DebugFrame))
                    {
                        <div class="border border-2 rounded overflow-hidden">
                            <img src="data:image/jpeg;base64,@DebugFrame" class="img-fluid" style="filter: contrast(120%);" />
                        </div>
                        <small class="text-muted mt-2 d-block">Imagem que o Tesseract leu</small>
                    }
                    else
                    {
                        <div class="text-muted py-4 border border-dashed rounded">
                            <small>Nenhuma leitura recente</small>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

<style>
    .fw-black {
        font-weight: 900;
    }

    .bg-gradient-dark {
        background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.7) 100%);
    }

    .animate-pulse {
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0% {
            opacity: 1;
        }

        50% {
            opacity: 0.5;
        }

        100% {
            opacity: 1;
        }
    }
</style>

@code {
    // Estado da Tela
    private string CurrentFrame;
    private string DebugFrame;
    private string PlateText = "---";
    private string VehicleInfo = "---";
    private string AccessMessage = "Aguardando...";
    private string ReasonText = "---";
    private string LastUpdateTime = DateTime.Now.ToLongTimeString();

    // Estilos
    private string StatusColor = "text-secondary";
    private string AlertClass = "alert-secondary";
    private bool IsAuthorized = false;

    protected override void OnInitialized()
    {
        // Inscreve-se no evento do processador
        Processor.OnAnprProcessed += HandleUpdate;
    }

    private void HandleUpdate(AnprWebResult result)
    {
        // O evento vem de outra thread, precisamos usar InvokeAsync para atualizar a UI
        InvokeAsync(() =>
        {
            // 1. Atualiza a Câmera (Sempre)
            if (result.FrameImage != null)
                CurrentFrame = Convert.ToBase64String(result.FrameImage);

            // 2. Atualiza Dados SE houver leitura de placa
            // (Para não piscar a tela com "---" quando não há carro)
            if (!string.IsNullOrEmpty(result.PlateText) && result.PlateText != "---")
            {
                PlateText = result.PlateText;
                VehicleInfo = result.VehicleInfo;
                AccessMessage = result.IsAuthorized ? "ACESSO PERMITIDO" : "ACESSO NEGADO";
                ReasonText = result.Message; // "Placa cadastrada" ou "Não autorizada"
                IsAuthorized = result.IsAuthorized;
                LastUpdateTime = DateTime.Now.ToLongTimeString();

                // Atualiza cores
                if (result.IsAuthorized)
                {
                    StatusColor = "text-success"; // Verde
                    AlertClass = "alert-success";
                }
                else
                {
                    StatusColor = "text-danger"; // Vermelho
                    AlertClass = "alert-danger";
                }

                // 3. Atualiza Imagem de Debug (Só quando há placa)
                if (result.DebugImage != null)
                {
                    DebugFrame = Convert.ToBase64String(result.DebugImage);
                }
            }

            StateHasChanged(); // Força o Blazor a redesenhar a tela
        });
    }

    public void Dispose()
    {
        // Remove a inscrição para evitar vazamento de memória ao sair da página
        Processor.OnAnprProcessed -= HandleUpdate;
    }
}